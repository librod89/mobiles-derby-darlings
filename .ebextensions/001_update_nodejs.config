commands:
  create_pre_dir:
    command: "mkdir /opt/elasticbeanstalk/hooks/appdeploy/pre"
    ignoreErrors: true
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/001_nodejs.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.1/install.sh | bash
      source /home/ec2-user/.bashrc
      nvm --version
      nvm install v7.5.0
      nvm alias default v7.5.0
      node -v